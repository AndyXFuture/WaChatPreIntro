<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#111111">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:background="@color/bottom">

        <!--用于实现标题栏居中-->
        <Button
            android:id="@+id/btn_chatroom_left"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:layout_marginTop="4dp"
            android:stateListAnimator="@null"
            android:layout_marginLeft="5dp"
            android:backgroundTint="#00000000"
            android:background="@color/bottom"
            android:text=""/>
        <!--标题栏-->
        <TextView
            android:id="@+id/text_label"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="8"
            android:layout_marginLeft="10dp"
            android:gravity="center"
            android:textSize="20sp"
            android:textColor="@color/white"
            android:text="" />
        <!--添加按钮-->
        <Button
            android:id="@+id/btn_chatroom_right"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:stateListAnimator="@null"
            android:layout_marginRight="5dp"
            android:layout_weight="1"
            android:background="#00000000"
            android:backgroundTint="#00000000"
            android:text="" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:background="@color/bottom"
        android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_marginVertical="20dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginLeft="20dp"
            android:layout_gravity="left|center_vertical"
            android:src="@drawable/ic_time_pure" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginVertical="10dp"
            android:orientation="vertical">
            <TextView
                android:id="@+id/tv_info_title"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="left|center_vertical"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="20dp"
                android:textColor="@color/white"
                android:textSize="20sp"
                android:textStyle="bold"
                android:text="TextView" />
            <TextView
                android:id="@+id/tv_info_content"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="2"
                android:gravity="left|top"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="20dp"
                android:textColor="#99FFFFFF"
                android:textSize="15sp"
                android:text="TextView" />
        </LinearLayout>

    </LinearLayout>

        <LinearLayout
            android:id="@+id/ly_setalias"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="left|center_vertical"
                android:layout_marginVertical="10dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="20dp"
                android:textColor="@color/white"
                android:textSize="17sp"
                android:text="设置备注和标签" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:gravity="right|top"
                android:layout_marginVertical="10dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="20dp"
                android:textColor="#88FFFFFF"
                android:textSize="20sp"
                android:text=">" />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/ly_setfriper"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="left|center_vertical"
                android:layout_marginVertical="10dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="20dp"
                android:textColor="@color/white"
                android:textSize="17sp"
                android:text="朋友权限" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:gravity="right|top"
                android:layout_marginVertical="10dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="20dp"
                android:textColor="#88FFFFFF"
                android:textSize="20sp"
                android:text=">" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ly_friendscir"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/bottom"
        android:layout_marginBottom="5dp"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:gravity="center_vertical"
            android:layout_marginVertical="10dp"
            android:orientation="horizontal">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="left|center_vertical"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="20dp"
                android:textColor="@color/white"
                android:textSize="17sp"
                android:text="朋友圈" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:gravity="right|top"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="20dp"
                android:textColor="#88FFFFFF"
                android:textSize="20sp"
                android:text=">" />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/ly_more"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="left|center_vertical"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="20dp"
                android:layout_marginVertical="10dp"
                android:textColor="@color/white"
                android:textSize="17sp"
                android:text="更多信息" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:gravity="right|top"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="20dp"
                android:layout_marginVertical="10dp"
                android:textColor="#88FFFFFF"
                android:textSize="20sp"
                android:text=">" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/bottom"
        android:layout_marginBottom="5dp"
        android:orientation="vertical">
        <TextView
            android:id="@+id/btn_send"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:gravity="center"
            android:textColor="@color/mycolor"
            android:textSize="17sp"
            android:text="♢发消息" />
        <TextView
            android:id="@+id/btn_send2"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:gravity="center"
            android:textColor="@color/mycolor"
            android:textSize="17sp"
            android:text="♢音视频通话" />
    </LinearLayout>

    <Button
        android:id="@+id/btn_delfriend"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="10dp"
        android:layout_marginHorizontal="10dp"
        android:text="删除该好友" />


</LinearLayout>